<div class="container bg-light py-4" style="border-radius: 50px;">
  <div class="text-center">
    <h1 class="mb-4">{{restaurant.name}}</h1>
    <img class="rounded mb-4" src="{{restaurant.image}}" alt="Card image cap" style="max-height: 300px;">
    <p class="text-success mb-1">
      <strong>Category :</strong>
      {{restaurant.category}}
    </p>
    <p class="text-danger mb-1">
      <strong>Rating :</strong>
      {{restaurant.rating}}
    </p>
  </div>
  <div class="row">
    <div class="col-12 col-md-10 col-lg-8 mx-auto">
      <p class="mb-5">
        <span class="text-info">
          <i class="fas fa-heart pr-2"></i>
          特色 :
        </span>
        {{restaurant.description}}
      </p>
      <p class="mb-1">
        <span class="text-info">
          <i class="fas fa-mobile-alt pr-2"></i>
          Phone :
        </span>
        {{restaurant.phone}}
        <p class="mb-1">
          <span class="text-info">
            <i class="fas fa-map-marker-alt pr-2"></i>
            Location :
          </span>
          {{restaurant.location}}
          <a href="{{restaurant.google_map}}" class="text-info" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>
      </p>
    </div>
  </div>
</div>